#!/usr/bin/env bash

echo '\n Installing Xcode Tools'
xcode-select --install

echo "\n Install and Set San Francisco as System Font"
ruby -e "$(curl -fsSL https://raw.github.com/supermarin/YosemiteSanFranciscoFont/master/install)"

echo '\n Building Homebrew'
sudo chown -R $USER /usr/local
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew bundle
brew cleanup

echo '\n Installing ZSH'
rm -rf ~/.oh-my-zsh
rm ~/.zshrc
git clone git://github.com/robbyrussell/oh-my-zsh.git ~/.oh-my-zsh
ln -s ~/dotfiles/zsh/.zshrc ~/.zshrc
ln -sf ~/dotfiles/zsh/theme ~/.oh-my-zsh/themes/zesty.zsh-theme
chsh -s /bin/zsh

echo '\n Setting up git'
ln -sf ~/dotfiles/git/.gitconfig ~/.gitconfig

echo '\n Installing NVM'
export NVM_DIR="$HOME/.nvm" && (
  git clone https://github.com/creationix/nvm.git "$NVM_DIR"
  cd "$NVM_DIR"
  git checkout `git describe --abbrev=0 --tags --match "v[0-9]*" origin`
) && . "$NVM_DIR/nvm.sh"
nvm install 6

echo '\n Installing RVM'
gpg --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3
curl -sSL https://get.rvm.io | bash -s stable --ruby
